{% from 'utility.html' import header,meta,jslinks,stylelink,footer %}

<!DOCTYPE html>
<html lang="en">
<head>
    {{meta()}}
    <title>LWS-LOGIN</title>
    
    <link rel="stylesheet" href="{{url_for('static',filename='css/register.css')}}">

</head>
<body>
    {{header()}}
    {{jslinks()}}
    <div class="container">
        <h4 class="top-right-2">Welcome to Learning with Soni!</h4>
        <form class="form_1" method="POST">
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" id="email" placeholder="Eg: Soni@srmap.edu.in" name="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="password" name="password">
            </div>
                <input class="check" type="checkbox" name="visible_password" id="visible_passsword" /> <label for="visible_password">Check password</label>
                {% with messages=get_flashed_messages() %}
                {% if messages %}
                <div class="alert alert-danger" role="alert">
                    {{messages[0]}}
                </div>
                {% endif %}
                {% endwith %}
            <div class="form-group">
                <button class="btn1" type="submit">
                    Login
                </button>
            </div>
            <div class="form-group">
                <p>Don't Have an account already?   <a href="{{url_for('register')}}">Sign Up</a></p>
            </div>
          </form>
    </div>
    {{footer()}}
</body>
</html>